@page
@model Sales_Management___Project.Pages.Page_Add_ProductModel
@using Sales_Management___Project.Entities


<form method="post">
    <label>Add a product:</label><br /><br />

    <label>Product ID:</label><br />
    <input type="text" name="productId" value="" /><br />

    <label>Product Name:</label><br />                        
    <input type="text" name="productName" value="" /><br />

    <label>Category:</label><br />
    <select name="categoryId">
        @foreach (Category category in Model.listCategories)
        {
            <option value="@category.categoryId">@category.categoryName</option>
        }
    </select><br />

    <label>Manufacturer:</label><br />
    <input type="text" name="manufacturer" value="" /><br />
    <label>Price:</label><br />
    <input type="number" min="0" name="price" value="" /><br />

    <label>Manufactured Date:</label><br />
    <input type="number" min="2018" name="mfgDate" value="" /><br />

    <label>Expiry:</label><br />
    <input type="number" min="0" name="expiry" value="" /><br />

    <input type="submit" name="submit" value="Save" />

</form>

@Model.message